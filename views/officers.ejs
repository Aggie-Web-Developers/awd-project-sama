<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>
<link rel="stylesheet" href="/styles/officers.css" />
	<body>
		<%- include('partials/nav') %>
        <div id="content" class="container">
            <div class="d-flex flex-row py-3">
                <div class="col-sm-12 gray-text">
                    <h1 class="division-title">Officer Team</h1>
                </div>
            </div>
        </div>
        <div class="container-fluid px-5">
            <div class="row mx-5" style="min-height: 80vh">
                <% officers.forEach(function (officer){ %>
                    <div class="col-lg-6">
                        <!-- Photo -->
                        <div class="circle other-photo">
                            <img class="shape" src="/<%= officer.profilePic.replace('public/', '') %>">
                        </div>
                        <!-- Introduction -->
                        <div class="officer-title"><%= officer.officerRole %></div>
                        <div class="officer-name"><%= officer.name %></div>
                        <div class="officer-intro">
                            <p><%= officer.bio %></p>
                        </div>  
                    </div>
                <% }); %>
            </div>
            
        </div>

		<script src="/scripts/template.js"></script>
		<%- include('partials/footer') %>
	</body>

</html>
