<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>

<%- include('partials/nav') %>

	<body>
		<div id="content" class="container">
      <div id="title" class="row">
        <!-- <div class="col-sm-12 col-md-4"> -->
          <h1 class="page-title">Contact Us</h1>
        <!-- </div> -->
      </div>

      <div id="discord-banner" class="row">
        <div class="banner-background" >
          
          <div id="banner-left">
            <!-- <div class="col-xs-6 col-sm-6">  -->
              <h2 class="discord-banner-title">Join our Discord<br> community</h2>
            <!-- </div> -->
            <!-- <div class="col-xs-5 col-sm-4"> -->
              <button class="discord-banner-button">
                <p class="discord-banner-button-text">Join the server</p>
              </button>
            <!-- </div> -->
          </div>

          <div id="banner-right">
            <img class="arrow-img col-xs-3 col-sm-3"/>
            <img class="arrow-tip-img" />
            <img class="sama-logo" />
            <img class="discord-logo" />
          </div> 

        </div>
      </div>

      <div id="form-container" class="row">
        <div class="col-xs-12 col-sm-7 offset-sm-1 form-container">
          <div class="row justify-content-center">
            <h3 class="form-header-primary">Specific Questions, Comments, or Concerns?</h3>
            <h4 class="form-header-secondary">We'll get back to you as soon as we can!</p>

            <form id="contact-form" name="myForm" class="form" action="/contact-us/submit" onsubmit="return validateForm()" method="POST" role="form">
              <div class="form-group">
                <label class="form-label" id="nameLabel" for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" tabindex="1">
              </div>

              <div class="form-group">
                <label class="form-label" id="emailLabel" for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="you@aggiesama.com" tabindex="2">
              </div>

              <div class="form-group">
                <label class="form-label" id="nameLabel" for="name">Company/Group</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Your Company" tabindex="1">
              </div>

              <div class="form-group">
                <label class="form-label" id="messageLabel" for="message" >Message</label>
                <textarea type="text" class="form-control" id="message" name="message" placeholder="Your Message" tabindex="2" rows="2"></textarea>
              </div>
            </form>

            

            <button class="submit-button"><p class="submit-button-text">Submit</p></button>
          </div>
        </div>
      </div>
    </div>

		<script src="/scripts/contact-us.js"></script>
		<%- include('partials/footer') %>
	</body>
</html>